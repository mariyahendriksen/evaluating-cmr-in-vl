#!/bin/sh

DATASET=coco
MODEL=groupvit

##################################################################
echo 'evaluation of' $MODEL 'on' $DATASET
##################################################################
declare -a PERTURBATIONS=(
                'synonym_adj'
                )
for PERTURBATION in "${PERTURBATIONS[@]}"
do
   echo perturbation: $PERTURBATION
   CUDA_VISIBLE_DEVICES=1 python src/evaluation.py \
    --dataset $DATASET \
    --model $MODEL \
    --perturbation $PERTURBATION \
    --task t2i
done

echo 'Done!'
